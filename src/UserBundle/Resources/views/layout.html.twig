{% extends '::base.html.twig' %}

{% block title %}{{ 'layout.login'|trans({}, 'FOSUserBundle') }}{% endblock %}

{% block body_attributes %}style="background-image: url({{ asset('images/background.jpg') }})"{% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-2">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'login.register.title'|trans }}</h3>
                    </div>
                    <div class="panel-body">
                        <p>{{ 'login.register.description'|trans }}</p>
                        <a class="btn btn-lg btn-primary btn-block" href="{{ path('fos_user_registration_register') }}">
                            {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                {% block fos_user_content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

